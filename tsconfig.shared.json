{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "rootDir": ".",
    "outDir": ".",
    "noEmit": false,
    "incremental": true,
    "tsBuildInfoFile": ".buildcache/tsconfig.shared.tsbuildinfo"
  },
  "include": ["shared/**/*.ts"],
  "exclude": ["node_modules"]
}
